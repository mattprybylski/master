<UserControl x:Class="MPAccountApplicationControls.ControlStyles.SearchUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MPAccountApplicationControls.ControlStyles"
             
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <TextBox  Text="{Binding Search, RelativeSource={RelativeSource Mode=TemplatedParent}, Mode=TwoWay, NotifyOnTargetUpdated=True}"  Background="AliceBlue" >
           
        </TextBox>
    </Grid>
</UserControl>
